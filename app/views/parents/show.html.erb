<h1>物件閲覧</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @parent.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @parent.rent_value %>
</p>

<p>
  <strong>住所:</strong>
  <%= @parent.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @parent.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @parent.remarks %>
</p>

<hr>
<% n =1 %>
<% @parent.childs.each do |child| %>
    <h2>最寄り駅<%= n %></h2>
    <p><strong>路線名 </strong><%= child.train_line %></p>
    <p><strong>駅名 </strong><%= child.near_station %></p>
    <p><strong>徒歩分数 </strong><%= child.walk_time %></p>
    <% n += 1 %>
<% end %>

<%= link_to 'Edit', edit_parent_path(@parent) %> |
<%= link_to 'Back', parents_path %>
